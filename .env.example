# Backend
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/quantumreview
REDIS_URL=redis://localhost:6379/0
JWT_SECRET=change-me-in-production-min-32-chars
DEBUG=true
RENDER=false
BACKEND_ORIGIN=http://localhost:8000
FRONTEND_ORIGIN=http://localhost:8080
CORS_ORIGINS=["http://localhost:8080"]

# GitHub OAuth
GITHUB_OAUTH_CLIENT_ID=your_oauth_client_id
GITHUB_OAUTH_CLIENT_SECRET=your_oauth_client_secret

# GitHub App
GITHUB_APP_ID=your_app_id
GITHUB_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nMIIE....\n-----END PRIVATE KEY-----\n
GITHUB_WEBHOOK_SECRET=your_webhook_secret
GITHUB_API_BASE=https://api.github.com

# LLM (optional)
LLM_PROVIDER=
LLM_API_KEY=

# Frontend
# In frontend/.env set VITE_API_BASE to point to backend API
# Example for production: https://your-backend.onrender.com/api
